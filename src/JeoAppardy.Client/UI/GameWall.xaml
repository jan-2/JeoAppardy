<Page x:Class="JeoAppardy.Client.UI.GameWall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:JeoAppardy.Client.UI"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:api="using:JeoAppardy.Client.Api"
      xmlns:iconPacks="using:MahApps.Metro.IconPacks"
      mc:Ignorable="d">

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid.Resources>
      <DataTemplate x:Key="PlayerTemplate"
                    x:DataType="api:Player">
        <Grid>
          <Border Background="WhiteSmoke"
                  CornerRadius="2"
                  Margin="0 50 0 0"
                  VerticalAlignment="Stretch" />
          <iconPacks:PackIconMaterial Kind="AccountCircle"
                                      Width="100"
                                      Height="100"
                                      Foreground="LightGray"
                                      Margin="10 0"
                                      HorizontalAlignment="Center" />
          <StackPanel Orientation="Vertical"
                      Margin="5 85 5 5"
                      VerticalAlignment="Bottom">
            <TextBlock HorizontalAlignment="Center"
                       Text="{x:Bind Name, TargetNullValue=PlayerName}"
                       FontSize="28" />
            <TextBlock HorizontalAlignment="Center"
                       Text="{x:Bind Points}"
                       FontSize="20"
                       Margin="10 40 10 10" />
          </StackPanel>
        </Grid>
      </DataTemplate>
    </Grid.Resources>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="{x:Bind ViewModel.CurrentGameWall.Title}"
               FontFamily="Assets/Some Time Later.otf#Some Time Later"
               FontSize="48"
               Margin="0 50 0 0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" />

    <ListBox Grid.Row="1"
             ItemsSource="{x:Bind ViewModel.CurrentGameWall.Categories}"
             Margin="10 5">
    </ListBox>

    <Grid Grid.Row="2"
          Margin="10 5">
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center">
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.FirstPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.SecondPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.ThirdPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.FourthPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
      </StackPanel>
    </Grid>
  </Grid>
</Page>
