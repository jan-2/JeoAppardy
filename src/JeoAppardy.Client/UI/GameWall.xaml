<Page x:Class="JeoAppardy.Client.UI.GameWall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:JeoAppardy.Client.UI"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:api="using:JeoAppardy.Client.Api"
      xmlns:iconPacks="using:MahApps.Metro.IconPacks"
      xmlns:controls="using:JeoAppardy.Client.Controls"
      mc:Ignorable="d">

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid.Resources>
      <Style x:Key="ListViewItemStyle"
             TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Stretch" />
      </Style>

      <DataTemplate x:Key="PlayerTemplate"
                    x:DataType="api:Player">
        <Grid>
          <Border Background="WhiteSmoke"
                  CornerRadius="2"
                  Margin="0 50 0 0"
                  VerticalAlignment="Stretch" />
          <iconPacks:PackIconMaterial Kind="AccountCircle"
                                      Width="100"
                                      Height="100"
                                      Foreground="LightGray"
                                      Margin="10 0"
                                      HorizontalAlignment="Center" />
          <StackPanel Orientation="Vertical"
                      Margin="5 85 5 5"
                      VerticalAlignment="Bottom">
            <TextBlock HorizontalAlignment="Center"
                       Text="{x:Bind Name, TargetNullValue=PlayerName}"
                       FontSize="28" />
            <TextBlock HorizontalAlignment="Center"
                       Text="{x:Bind Points}"
                       FontSize="20"
                       Margin="10 40 10 10" />
          </StackPanel>
        </Grid>
      </DataTemplate>
    </Grid.Resources>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="{x:Bind ViewModel.CurrentGameWall.Title}"
               FontFamily="Assets/Some Time Later.otf#Some Time Later"
               FontSize="48"
               Margin="0 50 0 0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" />

    <ListView Grid.Row="1"
              SelectionMode="None"
              FontFamily="Consolas"
              HorizontalContentAlignment="Stretch"
              VerticalContentAlignment="Stretch"
              ItemContainerStyle="{StaticResource ListViewItemStyle}"
              ItemsSource="{x:Bind ViewModel.CurrentGameWall.Categories}"
              Margin="10 5">
      <ListView.ItemTemplate>
        <DataTemplate x:DataType="api:GameCategory">
          <Border BorderBrush="LightGray"
                  BorderThickness="1 1 1 1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0"
                         Margin="20"
                         FontSize="28"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Text="{x:Bind Title}"
                         TextWrapping="Wrap"
                         TextTrimming="WordEllipsis" />

              <ListView Grid.Row="1"
                        SelectionMode="None"
                        IsItemClickEnabled="True"
                        FontFamily="Consolas"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        ItemContainerStyle="{StaticResource ListViewItemStyle}"
                        ItemsSource="{x:Bind Level}"
                        Margin="10 5">

                <ListView.ItemTemplate>
                  <DataTemplate x:DataType="api:GameLevel">
                    <Border HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                      <TextBlock Text="{x:Bind Title}"
                                 Margin="20"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontSize="24"
                                 TextWrapping="Wrap"
                                 TextTrimming="WordEllipsis" />
                    </Border>
                  </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                  <ItemsPanelTemplate>
                    <controls:UniformGrid Columns="1"
                                          Rows="4" />
                  </ItemsPanelTemplate>
                </ListView.ItemsPanel>
              </ListView>
            </Grid>

          </Border>
        </DataTemplate>
      </ListView.ItemTemplate>

      <ListView.ItemsPanel>
        <ItemsPanelTemplate>
          <controls:UniformGrid Columns="4"
                                Rows="1" />
        </ItemsPanelTemplate>
      </ListView.ItemsPanel>
    </ListView>

    <Grid Grid.Row="2"
          Margin="10 5">
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center">
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.FirstPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.SecondPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.ThirdPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
        <ContentControl Width="200"
                        Height="250"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Content="{x:Bind ViewModel.CurrentRound.FourthPlayer}"
                        ContentTemplate="{StaticResource PlayerTemplate}"
                        Margin="10" />
      </StackPanel>
    </Grid>
  </Grid>
</Page>
